pipeline {
    agent any
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }

        stage ('Building Jar') {
            steps {
                sh 'mvn clean package -f Application/pom.xml'
                sh 'ls -ltr Application/target/'
            }
        stage ('Building Docker Image')
            steps {
                cd Application/
                sh 'docker build -t app:v1 .'
                sh 'docker images'
            }
        }
    }
}
