pipeline {
    agent any
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }
        stage ('BuildingJar') {
            steps {
                sh 'mvn clean package -f Application/pom.xml'
                sh 'ls -ltr Application/target/'
            }
        }
        stage ('Building Docker Image'){
            steps {
                sh 'cd Application && docker build -t koppula18/japp:v1 .'
                sh 'docker login -u koppula18 -p Raju@007'
                sh 'docker push koppula18/japp:v1'
            }
        }
    }
}
